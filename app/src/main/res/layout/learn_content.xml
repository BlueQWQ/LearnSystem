<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:clipToPadding="true">

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/languageSelectFrom"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|right"
                android:text="中文"
                android:textColor="#808080"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|right"
                android:text="⇆"
                android:textColor="#808080"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/languageSelectTo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|right"
                android:text="英文"
                android:textColor="#808080"
                android:textSize="20sp" />
        </LinearLayout>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e1e1e1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/translateInputBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <EditText
            android:id="@+id/fanyiInputText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="50dp"
            android:background="#ffffff"
            android:hint="请输入要翻译的文本"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fanyiBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="查询"
            android:textColor="#808080"
            android:textSize="20sp" />

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e1e1e1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/translateInputBar"
        android:layout_below="@+id/titleBar">

        <ListView
            android:id="@+id/commentList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#cccccc00"
            android:listSelector="#00000000" />
    </RelativeLayout>

</RelativeLayout>